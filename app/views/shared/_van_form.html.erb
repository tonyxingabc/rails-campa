<%= simple_form_for(@van) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <% if @van.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @van.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :cost_per_night %>
    <%= f.input :max_guest %>
    <%= f.input :toilet %>
    <%= f.input :beds %>
    <%= f.input :transmission_type, :collection => %w[Manual Automatic] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
